<!--<?xml version="1.0"?>-->
<robot  xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find centauro)/centauro_urdf/urdf/config.xacro"/>

  <xacro:force-torque_sensor joint="j_ft_1" robot="centauro" ft_name="ft_arm1" pose="0 0 0 0 0 0"/>
  <xacro:if value="${arms}">
    <xacro:force-torque_sensor joint="j_ft_2" robot="centauro" ft_name="ft_arm2" pose="0 0 0 0 0 0"/>
  </xacro:if>

</robot>
