<?xml version="1" ?>
<launch>
	<arg name="schunk" default="0" />

	<param name="/gazebo_perfect_odometry" value="true"/>

	<include file="$(find centauro_launch)/model/centauro_model.launch">
		<arg if="$(arg schunk)" name="right_end_effector" value="schunk_hand" />
		<arg unless="$(arg schunk)" name="right_end_effector" value="stick" />
	</include>

	<param name="use_sim_time" value="true" />
	
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find centauro_gazebo)/worlds/simple_staircase.world"/>
		<arg name="paused" value="true" />
	</include>
	
	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="
		-param robot_description
		-urdf -model centauro
		-z 0.85
		-y -1.25
		-Y -1.570796
	   
		-J torso_yaw 0.0
		-J j_arm1_1 0.0
		-J j_arm1_2 -0.3
		-J j_arm1_3 -0.8
		-J j_arm1_4 -0.8
		-J j_arm1_5 -0.0
		-J j_arm1_6 -0.8
		-J j_arm1_7 0.0
		-J j_arm2_1 0.0
		-J j_arm2_2 0.3
		-J j_arm2_3 0.8
		-J j_arm2_4 0.8
		-J j_arm2_5 0.0
		-J j_arm2_6 0.8
		-J j_arm2_7 0.0
		
		-J ankle_yaw_1 1.5
		-J ankle_yaw_2 -1.5
		-J ankle_yaw_3 -1.5
		-J ankle_yaw_4 1.5
		-J hip_pitch_1 0.800000011920929
		-J hip_pitch_2 -0.800000011920929
		-J hip_pitch_3 -0.800000011920929
		-J hip_pitch_4 0.800000011920929
		-J hip_yaw_1 1.5
		-J hip_yaw_2 -1.5
		-J hip_yaw_3 -1.5
		-J hip_yaw_4 1.5
		-J knee_pitch_1 0.800000011920929
		-J knee_pitch_2 -0.800000011920929
		-J knee_pitch_3 -0.800000011920929
		-J knee_pitch_4 0.800000011920929
	" />
	
	<include file="$(find centauro_gazebo)/launch/centauro_controllers.launch">
		<arg name="schunk" value="$(arg schunk)" />
	</include>

	 <!-- Launch the config server -->
    <arg name="robot" default="centauro_schunk_sim"/>
    <node name="config_server" pkg="config_server" type="config_server" output="screen" required="false">
        <param name="config_path" value="$(find centauro_launch)/config"/>
        <param name="robot_name" value="$(arg robot)"/>
    </node>

    <node name="robotcontrol" pkg="robotcontrol" type="robotcontrol" output="screen">
        <param name="motion_path" value="$(find centauro_launch)/motions/centauro/" />
    	<param name="publish_ego_rot" value="true" />
		<param name="js_skip" value="1" />
        <rosparam>
            hw_interface: "robotcontrol::GazeboInterface"
            modelName: "centauro"
            prefix: "/centauro"
            init_relaxed: false
            initial_state: init
            motion_modules:
            - "centauro_motion_server::CentauroMotionServer"
            - "centauro_base::CentauroBase"
            - "centauro_laser_rotator::CentauroLaserRotator"
        </rosparam>
        <remap from="/robotcontrol/centauro/" to="/centauro/" />
    </node>

    <node name="centauro_base_primitives" pkg="centauro_base_primitives" type="centauro_base_primitives">
    </node>

</launch>
