<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- torso links -->


<link name="torso_2">
	<inertial>
		<origin xyz="${Torso_2_x} ${Torso_2_y} ${Torso_2_z}"/>
		<mass value="${Torso_2_mass}"/> <!-- mass  7: torso_1 (2) + torso_2 (5), head un_modelled -->
                <inertia ixx="${Torso_2_xx}" ixy="${Torso_2_xy}" ixz="${Torso_2_xz}" iyy="${Torso_2_yy}" iyz="${Torso_2_yz}" izz="${Torso_2_zz}"/>
        </inertial>

	<visual>
                <xacro:visual_model.torso />
		<material name="grey"/>
	</visual>

	<collision>
                <xacro:collision_model.torso />
		<material name="grey"/>
	</collision>
</link>
<!-- /torso links -->

<!-- torso joints -->
<joint name="torso_yaw" type="revolute">
   <xacro:if value="${pelvis}">
      <parent link="pelvis"/>
      <origin xyz="0.30 0 0.1"/>
   </xacro:if>
   <xacro:unless value="${pelvis}">
      <parent link="world"/>
      <origin xyz="0.30 0 ${0.1 + 0.85}"/>
   </xacro:unless>

   <child link="torso_2"/>
   <axis xyz="0 0 1"/>
   <limit lower="-2.618" upper="2.618" effort="1770" velocity="6.5"/> <!-- TODO -->
</joint>

<!-- /torso joints -->

<xacro:if	value="${torso_actuators}">
<!-- torso actuators -->
<xacro:position_actuator joint="torso_yaw" /> 
<!-- /torso actuators -->
</xacro:if> 


</robot>
