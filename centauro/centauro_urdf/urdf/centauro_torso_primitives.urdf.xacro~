<!-- torso joints -->
<xacro:unless	value="$(arg ONE_ARM)">
<joint name="torso_yaw" type="revolute">
	<parent link="pelvis"/>
	<child link="torso_2"/>
	<origin xyz="0.30 0 0"/>
	<axis xyz="0 0 1"/>
	<limit lower="-2.618" upper="2.618" effort="350" velocity="6.5"/> <!-- TODO -->
</joint>

<!-- /torso joints -->

<xacro:if	value="$(arg TORSO_ACTUATORS)"> 
<!-- torso actuators -->
<xacro:position_actuator joint="torso_yaw" /> 
<!-- /torso actuators -->
